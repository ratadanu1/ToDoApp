{% extends 'base.html.twig' %}

{% block title %}Creeaza un task nou!{% endblock %}

{% block body %}
    <div class="container">
        <h1>Formular</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="form">
                    {{ form_start(task_form) }}
                    
                    <div class="form-group">
                        {{ form_label(task_form.title) }}
                        {{ form_widget(task_form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(task_form.description) }}
                        {{ form_widget(task_form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(task_form.dueDate) }}
                        {{ form_widget(task_form.dueDate, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(task_form.category_id) }}
                        {{ form_widget(task_form.category_id, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(task_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    
                    {{ form_end(task_form) }}
                </div>
            </div>
        </div>

        <a href="/tasklist" class="btn btn-primary">Inapoi la lista de sarcini</a>
    </div>
{% endblock %}
